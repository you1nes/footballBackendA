<%- include ("../layouts/footer.ejs") %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><%= title %></div>
            <div class="panel-body">
                <form class="form-horizontal" action="../player/add" method="POST">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="nom">Nom Player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nom" id="nom" placeholder="Entrez nom Player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="prenom">Prenom Player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="prenom" id="prenom" placeholder="Entrez prenom Player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="age">Age player</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" name="age" id="age" placeholder="Entrez l'age du Player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="nationality">nationality player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nationality" id="nationality" placeholder="Entrez la nationalité du player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="image">image player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="image" id="image" placeholder="Entrez  image du player">
                        </div>
                    </div>
                    <select name="team" id="idTeam">
                        <option value="">--Please choose an option--</option>
                        <option value="dog">Dog</option>
                        <option value="cat">Cat</option>
                        <option value="hamster">Hamster</option>
                        <option value="parrot">Parrot</option>
                        <option value="spider">Spider</option>
                        <option value="goldfish">Goldfish</option>
                    </select>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="idTeam">Team player</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" name="idTeam" id="idTeam" placeholder="Entrez la team du player">

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Insérer</button>
                            <a href="/player"><button type="button" class="btn btn-default">Annuler</button></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<%- include ("../layouts/footer.ejs") %>
