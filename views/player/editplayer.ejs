<%- include ("../layouts/footer.ejs") %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><%= title %></div>
            <div class="panel-body">
                <%console.log(player.idPlayer)%>
                <form class="form-horizontal" action="/player/update/<%= player.idPlayer %>" method="POST">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="nom">Nom du Player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nom" id="nom" placeholder="Entrez nom " value="<%= player.nom %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="nom">Prenom du Player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="prenom" id="prenom" placeholder="Entrez prenom " value="<%= player.prenom %>">
                        </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="age">Age du Player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="age" id="age" placeholder="Entrez age " value="<%= player.age %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="nationality">Nationalité player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nationality" id="nationality" placeholder="Entrez nationalité " value="<%= player.nationality %>">
                        </div>
                    </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="image">image player</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="image" id="image" placeholder="Entrez image " value="<%= player.image %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="idTeam"> Team player</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="idTeam" id="idTeam" placeholder="Entrez team " value="<%= player.idTeam %>">
                            </div>
                        </div>


                        <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">modifier</button>
                            <a href="/player"><button type="button" class="btn btn-default">Annuler</button></a>
                        </div>
                    </div>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

<%- include ("../layouts/footer.ejs") %>
