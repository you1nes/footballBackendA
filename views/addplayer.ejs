<%- include ../layouts/header.ejs %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><%= title %></div>
            <div class="panel-body">
                <form class="form-horizontal" action="../player/add" method="POST">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="nom">Nom Player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nom" id="nom" placeholder="Entrez nom Player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="prenom">Prenom Player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="prenom" id="prenom" placeholder="Entrez prenom Player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="age">Age player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="age" id="age" placeholder="Entrez l'age du Player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="nationality">nationality player</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nationality" id="nationality" placeholder="Entrez la nationalité du player">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="team">Team player</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="team" id="team">
                                <option value="">Select Team</option>
                                <% if (teams) { %>
                                    <% teams.forEach(function(team){ %>
                                        <option value="<%= team.idTeam %>"><%= team.idTeam %> </option>
                                    <% }) %>
                                <% } %>

                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Insérer</button>
                            <a href="/player"><button type="button" class="btn btn-default">Annuler</button></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<%- include ../layouts/footer.ejs %>
